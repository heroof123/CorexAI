{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Corex",
  "version": "0.1.0",
  "identifier": "com.pc.corex",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Corex",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "maximized": false,
        "decorations": false,
        "center": true,
        "titleBarStyle": "Transparent"
      }
    ],
 "security": {
  "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:* http://localhost:* https://*; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"
}

  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
